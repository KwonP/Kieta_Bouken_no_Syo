<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <LinearLayout
                android:id="@+id/warriorbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@id/warriorbtn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/sword"
                    android:background="@color/background"
                    android:scaleType="fitXY"
                    android:onClick="jobSelOnClick"
                    />
        <Button
            android:id="@id/warriorbtn"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:text="@string/kr_job1"
            android:onClick="jobSelOnClick"/>
        </LinearLayout>
         <LinearLayout
             android:id="@+id/archerbtn"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:gravity="center_horizontal">
                <ImageView
                    android:id="@id/archerbtn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/archer"
                    android:background="@color/background"
                    android:scaleType="fitXY"
                    android:onClick="jobSelOnClick"
                    />
        <Button
            android:id="@id/archerbtn"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:text="@string/kr_job2"
            android:onClick="jobSelOnClick"/>
         </LinearLayout>
       <!-- <Button

            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:text="@string/kr_job3"/>-->
            <LinearLayout
                android:id="@+id/helpbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:onClick="jobSelOnClick">
                <Button
                    android:id="@id/helpbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ヘルプ"
                    android:onClick="jobSelOnClick"/>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>