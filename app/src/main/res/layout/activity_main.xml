<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.moire.tcg.MainActivity"
    android:orientation="vertical"
    android:background="@color/background"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/title_background22"
            android:scaleType="fitXY"
            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:gravity="center_horizontal"
            android:text="@string/kr_title"
            android:textColor="#ffff00"
            android:textSize="50sp" />
        <ImageView
            android:id="@+id/fview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fire01"
            android:layout_marginStart="25dp"
            android:layout_marginTop="80dp"/>
        <ImageView
            android:id="@+id/fview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fire01"
            android:layout_gravity="end"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="80dp"/>
    </FrameLayout>

    <Button
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/startbtn"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="ゲームスタート"
        android:onClick="btnOnClick"
        />


    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/endbtn"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="終了"
        android:onClick="btnOnClick"
        />

</LinearLayout>
